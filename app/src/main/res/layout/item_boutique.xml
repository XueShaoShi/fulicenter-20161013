<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_boutique_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp">
    <ImageView
        android:id="@+id/ivBoutiqueImg"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/nopic"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="vertical"
        android:gravity="top"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_toRightOf="@id/ivBoutiqueImg"
        android:background="@color/white" android:weightSum="1">
        <TextView
            android:id="@+id/tvBoutiqueTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_title"
            android:text="Aug 28 201"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"/>
        <TextView
            android:id="@+id/tvBoutiqueName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/list_item_name"
            android:text="冬季橱窗大换血"
            android:textSize="16sp"
            android:layout_marginTop="20dp"
            android:ellipsize="end"
          />
        <TextView
            android:id="@+id/tvBoutiqueDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_normal"
            android:text="走过路过不要错过，只要10元10元你买不了吃亏，买不了上当"
            android:textSize="16sp"
            android:layout_marginTop="10dp"
            android:ellipsize="end"
        />

    </LinearLayout>



</RelativeLayout>